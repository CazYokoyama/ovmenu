#!/usr/bin/wish

wm title . "\[ M A I N - M E N U \]"

proc xcsoar { } {
   puts "invoke xcsoar"
}

proc tophat { } {
   exec /home/caz/tophat/output/UNIX/bin/tophat -640x480
}

proc lk8000 { } {
   puts "invoke lk8000"
}

proc file { } {
   puts "invoke file"
}

proc system { } {
   puts "invoke system"
}

proc exit { } {
   puts "invoke exit"
}

proc restart { } {
   puts "invoke restart"
}

proc power_off { } {
   puts "invoke power_off"
}

grid [button .xcsoarButton    -text "XCSoar - Start XCSoar" -command xcsoar]
grid [button .tophatButton    -text "TopHat - Start TopHat" -command tophat]
grid [button .lk8000Button    -text "LK8000 - Start LK8000" -command lk8000]
grid [button .fileButton      -text "File - Copy file to and from OpenVario" -command file]
grid [button .systemButton    -text "System - Update, Settings, ..." -command system]
grid [button .exitButton      -text "Exit - Exit to the shell" -command exit]
grid [button .restartButton   -text "Restart - Reboot" -command restart]
grid [button .power_offButton -text "Power_OFF - Power OFF" -command power_off]
